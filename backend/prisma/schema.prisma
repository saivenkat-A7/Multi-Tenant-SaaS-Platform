generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum TenantStatus {
  active
  suspended
  trial
}

enum SubscriptionPlan {
  free
  pro
  enterprise
}

enum UserRole {
  super_admin
  tenant_admin
  user
}

enum ProjectStatus {
  active
  archived
  completed
}

enum TaskStatus {
  todo
  in_progress
  completed
}

enum TaskPriority {
  low
  medium
  high
}


model tenants {
  id                String       @id @default(uuid())
  name              String
  subdomain         String       @unique
  status            TenantStatus @default(trial)
  subscription_plan SubscriptionPlan @default(free)
  max_users         Int          @default(5)
  max_projects      Int          @default(3)
  created_at        DateTime     @default(now())
  updated_at        DateTime     @updatedAt

  users             users[]
  projects          projects[]
  tasks             tasks[]
  audit_logs        audit_logs[]
}

model users {
  id            String       @id @default(uuid())
  tenant_id     String?
  email         String
  password_hash String
  full_name     String
  role          UserRole
  is_active     Boolean      @default(true)
  created_at    DateTime     @default(now())
  updated_at    DateTime     @updatedAt

  tenant        tenants?     @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
  projects      projects[]   @relation("CreatedProjects")
  tasks         tasks[]      @relation("AssignedTasks")
  audit_logs    audit_logs[]

  @@unique([tenant_id, email])
}

model projects {
  id          String        @id @default(uuid())
  tenant_id   String
  name        String
  description String?
  status      ProjectStatus @default(active)
  created_by  String
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt

  tenant      tenants       @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
  creator     users         @relation("CreatedProjects", fields: [created_by], references: [id])
  tasks       tasks[]
}

model tasks {
  id           String       @id @default(uuid())
  project_id   String
  tenant_id    String
  title        String
  description  String?
  status       TaskStatus    @default(todo)
  priority     TaskPriority  @default(medium)
  assigned_to  String?
  due_date     DateTime?
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt

  tenant       tenants       @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
  project      projects      @relation(fields: [project_id], references: [id], onDelete: Cascade)
  assignee     users?        @relation("AssignedTasks", fields: [assigned_to], references: [id])
}

model audit_logs {
  id          String   @id @default(uuid())
  tenant_id   String
  user_id     String?
  action      String
  entity_type String
  entity_id   String
  ip_address  String?
  created_at  DateTime @default(now())

  tenant      tenants  @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
  user        users?   @relation(fields: [user_id], references: [id])
}
